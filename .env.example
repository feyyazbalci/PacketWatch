# PacketWatch Environment Configuration

# ================================
# Server Configuration
# ================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENVIRONMENT=development
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# ================================
# Database Configuration (PostgreSQL)
# ================================
DB_HOST=localhost
DB_PORT=5435
DB_USERNAME=packetwatch
DB_PASSWORD=packetwatch123
DB_NAME=packetwatch
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# ================================
# Redis Configuration
# ================================
REDIS_HOST=localhost
REDIS_PORT=6375
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# ================================
# Packet Capture Configuration
# ================================
CAPTURE_INTERFACE=any
CAPTURE_SNAP_LEN=1600
CAPTURE_PROMISCUOUS=true
CAPTURE_TIMEOUT=30s
CAPTURE_BUFFER_SIZE=33554432
CAPTURE_ENABLE_IPV6=false

# ================================
# Security Configuration
# ================================
JWT_SECRET=packetwatch-dev-secret-change-in-production
JWT_EXPIRATION=24h
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20
TLS_ENABLED=false
TLS_CERT_PATH=
TLS_KEY_PATH=

# ================================
# Monitoring Configuration
# ================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PATH=/metrics
LOG_LEVEL=info
LOG_FORMAT=json